<script>
  const labels = document.querySelectorAll('#LocationSwitcher label');
  labels[0].querySelector('input').checked = true;
  deselectAll(labels)
  selectLoc(labels[0]);
  labels.forEach(label=> {
    label.addEventListener('change', (ev)=> {
      deselectAll(labels)
      selectLoc(label);
    })
  })

  function selectLoc(label) {
    label.classList.add('border-blue-fbc');
    label.classList.add('text-blue-fbc');
    label.classList.add('font-bold');
    // do some content stuff too
  }
  function deselectAll(labels) {
    labels.forEach(label=> {
      label.classList.remove('border-blue-fbc');
      label.classList.remove('text-blue-fbc');
      label.classList.remove('font-bold');
    })
  }
</script>
