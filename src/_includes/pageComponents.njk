{% for comp in components %}
    {% set type = comp.sys.contentType.sys.id %}

    {% if type == 'instructions' %}
      {% include "./components/instructions.njk" %}

    {% elif type == 'menuBlock' %}
      {% include "./components/menuBlock.njk"%}

    {% elif type == 'heroVideo' %}
     {% heroVideo comp.fields.youTubeUrl | youTubeId %}

    {% elif type == 'blockQuote' %}
     {% fullWidthQuote comp.fields.quoteText %}

    {% elif type == 'blockAd' %}
     {% slimAd comp.fields.text %}

  {% endif %}

{% endfor %}